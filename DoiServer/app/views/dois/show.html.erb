<div class="panel panel-default">
	<div class="panel-heading"><h2>DOI <small><%= @doi.name %></small></h2></div>
	<div class="panel-body">
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Owner</th>
			<th>Updated</th>
			<th>Created</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= @doi.name %></td>
			<td><%= @doi.description %></td>
			<td><%= @doi.user.email %></td>
			<td><%= @doi.user.updated_at %></td>
			<td><%= @doi.user.created_at %></td>
		</tr>
	</tbody>
</table>
</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading"><h2>Reviews <small><%= @doi.name %></small></h2></div>
	<div class="panel-body">
		<table class="table table-condensed table-striped">
			<thead>
				<tr>
					<th>Comment</th>
					<th>User</th>
				</tr>
			</thead>
			<tbody>
				<% @doi.reviews.each do |review| %>
					<tr>
						<td><%= review.comment %></td>
						<td><%= review.user.email %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="col-lg-offset-2 col-lg-10">
	<p>
		<% if @doi.user.id == current_user.id %>
			<%= link_to 'Edit', edit_doi_path(@doi), :class => 'btn btn-default' %>
		<% end %>
		<%= link_to 'Back', dois_path, :class => 'btn btn-default' %>
	</p>
</div>

