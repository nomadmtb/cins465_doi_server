<p id="notice"><%= notice %></p>

<h1>DOI <small><%= @doi.name %></small></h1>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Owner</th>
			<th>Last_updated</th>
			<th>Created</th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= @doi.name %></td>
			<td><%= @doi.description %></td>
			<td><%= @doi.user.email %></td>
			<td><%= @doi.user.updated_at %></td>
			<td><%= @doi.user.created_at %></td>
		</tr>
	</tbody>
</table>

<h3>Reviews</h3>
		<table class="table table-condensed table-striped">
			<thead>
				<tr>
					<th>Comment</th>
					<th>User</th>
				</tr>
			</thead>
			<tbody>
				<% @doi.reviews.each do |review| %>
					<tr>
						<td><%= review.comment %></td>
						<td><%= review.user.email %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

<div class="col-lg-offset-2 col-lg-10">
	<p>
		<% if @doi.user.id == current_user.id %>
			<%= link_to 'Edit', edit_doi_path(@doi), :class => 'btn btn-default' %>
		<% end %>
		<%= link_to 'Back', dois_path, :class => 'btn btn-default' %>
	</p>
</div>

