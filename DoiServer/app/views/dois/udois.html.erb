<div class="panel panel-default">
	<div class="panel-heading"><h2>User DOIs <small><%= current_user.email %></small></h2></div>
	<div class="panel-body">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>DOI Owner</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.description %></td>
        <td><%= doi.user.email %></td>
        <td><%= link_to 'Show', doi, :class => 'btn btn-default btn-block' %></td>
        <td><%= link_to 'Edit', edit_doi_path(doi), :class => 'btn btn-default btn-block' %></td>
        <td><%= link_to 'Destroy', doi, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<%= link_to 'New Doi', new_doi_path(:user_id => current_user.id), :class => 'btn btn-default' %>
