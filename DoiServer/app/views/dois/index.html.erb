<div class="panel panel-default">
	<div class="panel-heading"><h2>All DOIs</h2></div>
	<div class="panel-body">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>DOI Owner</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.description %></td>
        <td><%= doi.user.email %></td>
	<td><%= doi.updated_at %></td>
        <td><%= link_to 'View', doi, :class => 'btn btn-default' %></td>
	<% if current_user.id == doi.user.id %>
        <td><%= link_to 'Edit', edit_doi_path(doi), :class => 'btn btn-default' %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div
