<h1>All DOI's</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>DOI Owner</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dois.each do |doi| %>
      <tr>
        <td><%= doi.name %></td>
        <td><%= doi.description %></td>
        <td><%= doi.user.email %></td>
	<td><%= doi.created_at %></td>
	<td><%= doi.updated_at %></td>
	<td><%= link_to 'Reviews', reviews_path, :class => 'btn btn-default btn-block' %></td>
        <td><%= link_to 'Show', doi, :class => 'btn btn-default btn-block' %></td>
	<% if current_user.id == doi.user.id %>
        <td><%= link_to 'Edit', edit_doi_path(doi), :class => 'btn btn-default btn-block' %></td>
        <td><%= link_to 'Delete', doi, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-block' %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doi', new_doi_path(:user_id => current_user.id), :class => 'btn btn-default' %>
