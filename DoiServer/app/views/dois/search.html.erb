<div class="panel panel-info">
	<div class="panel-heading"><h2>Search Results</h2></div>
	<div class="panel-body">
		<table class="table table-condensed table-striped">
  			<thead>
    				<tr>
      					<th>DOI</th>
					<th>Current URL</th>
      					<th>Description</th>
					<th></th>
    				</tr>
  			</thead>

  			<tbody>
    				<% @dois.each do |doi| %>
      					<tr>
        					<td><%= doi.name %></td>
						<td><%= link_to(doi.urls.last.url,doi.urls.last.url, url_options = {:confirm => 'You are leaving DOI server. Continue?'}) %></td>
        					<td><%= doi.description %></td>
						<% if current_user %>
							<td><%= link_to 'View', doi, :class => 'btn btn-default btn-block' %></td>
						<% end %>
      					</tr>
    				<% end %>
  			</tbody>
		</table>
		<div class="panel-footer">
		</div>
	</div>
</div>

